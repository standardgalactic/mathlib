  (j : J) : nonempty (F.to_eventual_ranges.obj j) :=
let ‚ü®i, f, h‚ü© := F.is_mittag_leffler_iff_eventual_range.1 h j in
by { rw [to_eventual_ranges_obj, h], apply_instance }

