{ functor := extend_cone,
  inverse := cones.whiskering F.op,
  unit_iso := nat_iso.of_components (Œª c, cones.ext (iso.refl _) (by tidy)) (by tidy),
  counit_iso := nat_iso.of_components (Œª c, cones.ext (iso.refl _) (by tidy)) (by tidy), }.
