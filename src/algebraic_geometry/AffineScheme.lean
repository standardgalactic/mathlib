    (hs : ideal.span (s : set (X.presheaf.obj $ op U)) = ‚ä§),
    (‚àÄ (f : s), P (X.affine_basic_open f.1)) ‚Üí P U)
  (hS : (‚ãÉ (i : S), i : set X.carrier) = set.univ)
