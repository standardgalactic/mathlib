{ obj := Œª j, F.eventual_range j,
  map := Œª i j f, (F.eventual_range_maps_to f).restrict _ _ _,
  map_id' := Œª i, by { simp_rw F.map_id, ext, refl },
  map_comp' := Œª _ _ _ _ _, by { simp_rw F.map_comp, refl } }

