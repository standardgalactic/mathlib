open affine_map

/-- If `f` is an affine map, then its linear part is continuous iff `f` is continuous. -/
lemma affine_map.continuous_linear_iff [semi_normed_space ùïú V'] {f : P ‚Üí·µÉ[ùïú] P'} :
  continuous f.linear ‚Üî continuous f :=
begin
  inhabit P,
  have : (f.linear : V ‚Üí V') =
    (isometric.vadd_const $ f $ default P).to_homeomorph.symm ‚àò f ‚àò
      (isometric.vadd_const $ default P).to_homeomorph,
  { ext v, simp },
  rw this,
  simp only [homeomorph.comp_continuous_iff, homeomorph.comp_continuous_iff'],
end

@[simp] lemma dist_center_homothety (p‚ÇÅ p‚ÇÇ : P) (c : ùïú) :
  dist p‚ÇÅ (homothety p‚ÇÅ c p‚ÇÇ) = ‚à•c‚à• * dist p‚ÇÅ p‚ÇÇ :=
by simp [homothety_def, norm_smul, ‚Üê dist_eq_norm_vsub, dist_comm]

@[simp] lemma dist_homothety_center (p‚ÇÅ p‚ÇÇ : P) (c : ùïú) :
  dist (homothety p‚ÇÅ c p‚ÇÇ) p‚ÇÅ = ‚à•c‚à• * dist p‚ÇÅ p‚ÇÇ :=
